{% extends 'base.html.twig' %}

{% block main_content %}
    <div class="container" style="margin-top: 75px">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h4>{{ tag.title }}</h4>

                {% if not topics is empty %}
                    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                        <table class="table table-striped center">
                            <thead>
                            <tr>
                                <th>Name</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for topic in tag.topics %}
                                <tr>
                                    <td>{{ topic.headline }}</td>
                                    <td><a href="{{ path('watchTopic', {'id':  topic.id}) }}">View Posts</a></td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    {% endif %}
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}